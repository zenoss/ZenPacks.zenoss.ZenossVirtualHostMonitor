<tal:block metal:use-macro="here/templates/macros/page2">
<tal:block metal:fill-slot="contentPane">

<tal:block 
    tal:define="tableName string:virtualMachineList;
    objects here/guestDevices/objectValuesAll;
    tabletitle string:Virtual Guest Devices;
    batch python:here.ZenTableManager.getBatch(tableName,objects)">
<tal:block metal:use-macro="here/zenuimacros/macros/zentable">
<tal:block metal:fill-slot="zentablecontents">

<!-- BEGIN TABLE CONTENTS -->
    <tr>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                        tableName,'displayName','Name')"/>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                            tableName,'memory','Memory')"/>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                            tableName,'osType','OS')"/>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                            tableName,'adminStatus','Powered')"/>
        <th tal:replace="structure python:here.ZenTableManager.getTableHeader(
                            tableName,'operStatus','Status')"/>
    </tr>
    <tal:block tal:repeat="gd batch">
    <tr tal:define="odd repeat/gd/odd;
                    link gd/managedDeviceLink"
        tal:attributes="class python:test(odd, 'odd', 'even')">
        <td class="tablevalues">
	    <span tal:content="structure gd/urlLink"/>
	    <span tal:condition="link" tal:omit-tag>
                 (<span tal:replace="structure gd/managedDeviceLink"/>)
            </span>
        </td>
        <td class="tablevalues" tal:content="gd/memoryString"/>
        <td class="tablevalues" tal:content="gd/osType"/>
        <td class="tablevalues"
	    tal:define='color python:test(gd.adminStatus, "green", "red")'>
           <img tal:attributes="src string:img/${color}_dot.png"/>
        </td>
        <td class="tablevalues" 
	    tal:define='color python:test(gd.adminStatus, test(gd.operStatus, "green", "red"), "grey")'>
           <img tal:attributes="src string:img/${color}_dot.png"/>
        </td>
    </tr>
    </tal:block>
    <tr>
        <td colspan="8" class="tableheader" align='center'>
        <form metal:use-macro="here/zenTableNavigation/macros/navtool"></form>
        </td>
    </tr>
<!-- END TABLE CONTENTS -->

</tal:block>
</tal:block>
</tal:block>

</tal:block>
</tal:block>

